{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "arrow-parens": [false],
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "no-console": {
      "severity": "warning"
    },
    "trailing-comma": [true, {"esSpecCompliant": true}]
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": ["dist/**/*"]
  }
}
